                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter</a>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <a class="nav-link {{ app.request.pathinfo == path('app_login') ? 'styleActif' : '' }}" href="{{ path('app_login') }}">Se connecter</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</div>
{% endblock %}